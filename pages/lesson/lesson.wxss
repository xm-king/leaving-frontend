/* pages/lesson/lesson.wxss */
page{
  height: 100%;
  background-color: gainsboro; 
}
.lesson{
  height: 70px;
  margin-top: 20px;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 5px;/*圆角弧度 */
  border-color: black;/*边框颜色 */
  background-color: white;
  display: flex;
  flex-direction: column;
}
.mylesson{
  margin-top: 20px;
  align-items: center;
  display: flex;
  justify-content: space-between;
}
.slesson{
  margin-left: 10px;
  overflow: hidden;/*单行文本溢出*/
  text-overflow: ellipsis;
  white-space: nowrap;
  color: green;
}
.sclass{
  margin-right: 10px;
  overflow: hidden;/*单行文本溢出*/
  text-overflow: ellipsis;
  white-space: nowrap;
}
.setTime{
  font-size: 8pt;
  color: gainsboro;
  margin-top: 10px;
  margin-right: 5px;
  text-align: right;
}